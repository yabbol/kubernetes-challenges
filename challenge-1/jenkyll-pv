apiVersion: v1
kind: PersistentVolume
metadata:
  name: jenkyl-pv
  namespace: development
  labels:
    app.kubernetes.io/instance: jenkyll
spec:
  storageClassName: jenkyl-pv
  accessModes:
  - ReadWriteOnce
  capacity:
    storage: 5Gi
  persistentVolumeReclaimPolicy: Retain
  hostPath:
    path: /data/jenkyl-volume/
